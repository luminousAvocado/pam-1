@{
  ViewData["Title"] = "Login";
  Layout = "_LoginLayout";
}
<div class="bg-display">
  <div class="login-container">
    <div class="login-form">
      <div class="logo">
        <img src="~/images/ProbBadge.png" alt="LA COUNTY PROBATION LOGO" />
      </div>
      <span class="login-title"> Probation Access Manager </span>
      <form asp-action="Login" method="post">
        <div class="input-container">
          <input name="username" class="input-edit" placeholder="Username" data-val-required="Username is required." required />
        </div>
        <div class="input-container">
          <input name="password" class="input-edit" type="password" data-val-required="Password is required." placeholder="Password" required />
        </div>
        <button type="submit" class="btn btn-info btn-block" value="submit" style="margin-top:40px;"> Login </button>
        @if (Model != null)
        {
          <p class="text-danger">@Model.Message</p>
        }
        <p style="text-align:center; color:white; padding-top: 10px;">&copy; Copyright 2018-2019. Los Angeles County. </p>
        <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
      </form>
    </div>
  </div>
</div>
